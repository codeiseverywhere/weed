<div id="product-ingredients" class="product-ingredients">
  <div class="pi__inner">
  
    <div class="pi__header">
      <h4 class="pi__header-title">
        {{ section.settings.header-title }}
      </h4>
      <p class="pi__header-text">
        {{ section.settings.header-text }}
      </p>
    </div>

    <div class="pi__content">
      <div class="pi__slider">
        {% for field in shop.metafields.global.ingredients.ingredients  %}
        {% assign loop = forloop.index %}
          <div class="pi__slide">
            <div class="pi__slide-text-box">
              <p class="pi__slide-title">{{ field.title }}</p>
              <h5 class="pi__slide-benefit">{{ field.benefit }}</h5>
              {% for desc in field.descriptions %}
                <li class="pi__slide-desc">{{ desc }}</li>
              {% endfor %}
            </div>
            <img src="{{ field.image }}" class="pi__slide-image" />
          </div>
        {% endfor %}
      </div>
      <div class="pi__slider-nav-wrap">
        <div class="pi__slider-nav">
          {% for field in shop.metafields.global.ingredients.ingredients  %}
            <div class="pi__slide-nav"></div>
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="pi__footer">
      <div class="pi__footer-content">
        <p class="pi__footer-title">{{ section.settings.footer-title-1 }}</p>
        <p class="pi__footer-text">{{ section.settings.footer-text-1 }}</p>
        <p class="pi__footer-title">{{ section.settings.footer-title-2 }}</p>
        <p class="pi__footer-text">{{ section.settings.footer-text-2 }}</p>
        <p class="pi__footer-title">{{ section.settings.footer-title-3 }}</p>
        <p class="pi__footer-text">{{ section.settings.footer-text-3 }}</p>
      </div>
    </div>

  </div>
</div>


